doctype html
html
  head
    title!= title
    link(rel='icon', type='image/png', href='static/favicon.ico')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='static/style.css')
    script(src='https://code.jquery.com/jquery-2.2.3.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
    meta(charset='utf-8')
  body.corpus
block content
    nav.navbar.banniere.navbar-fixed-top
        .container-fluid
            .navbar-header
                button( class="navbar-toggle collapsed" data-toggle="collapse" data-target="navbar-1" aria-expanded="false")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                p.navbar-brand-e3 E3 News
            .collapse.navbar-collapse#navbar-1
                form(class="navbar-form navbar-left" role="search")
                    .form-group: input(type="text" class="form-control" placeholder="Search" id="search")
                ul.nav.navbar-nav.navbar-right
                  li.menu.expand
                    a conf E3 2017
                  li.menu#xbox
                    a Xbox
                  li.menu#playstation
                    a Playstation
                  li.menu#nintendo
                    a Nintendo
    div.container
        div.content
            ul.expand-content.list-group.row
              div.col-md-4
                  li.list-group-item <b>EA</b>: <i>10 juin 22h</i>
                  li.list-group-item <b>Xbox</b> : <i>11 juin 23h00</i>
                  li.list-group-item <b>Bethesda</b> : <i>12 juin 3h30</i>
              div.col-md-4
                  li.list-group-item <b>PC Gaming Show</b> : <i>12 juin 19h00</i>
                  li.list-group-item <b>Ubisoft</b> : <i>12 juin 22h00</i>
                  li.list-group-item <b>PlayStation</b> : <i>13 juin 3h00</i>
              div.col-md-4
                  li.list-group-item <b>Nintendo Spotlight</b> : <i>13 juin 18h00</i>
                  li.list-group-item <b>Devolver Digital</b> : <i>12 juin 7h00</i>

            table.table.table-default.fixedtable
                thead
                    tr
                        th News
                        th Date
                        th Source
                tbody
                each article in articles
                    tr
                        td: a(href=article.link target="_blank" class="link") #{article.title}
                        td= article.published
                        case article.feed.name
                            when "jeuxvideo.com": td: img(src="static/jvcom.png" height="50" width="50")
                            when "IGN France": td: img(src="static/ign.png" height="50" width="50")
                            when "Gameblog": td: img(src="static/test.jpg" height="50" width="50")
                            when "L\'actu d\'IndieMag": td: img(src="static/indiemag.png" height="50" width="50")
                            when "Gamekyo.com  News": td: img(src="static/gamekyo.jpeg" height="50" width="50")
                            when "Podcasts â€“ Gaminfo.fr": td: img(src="static/gaminfo.jpg" height="50" width="50")
                            when "Nintendo-Town.fr": td: img(src="static/ntown.png" height="50" width="50")
                            default: td: img(src="static/gkult.png" height="50" width="50")

    script(src='static/sort.js')
    div.footer
